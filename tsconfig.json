{
    "compilerOptions": {
        "module":"ESNext",
        "baseUrl": ".",
        "noImplicitAny": true,
        "removeComments": false,
        "preserveConstEnums": true,
        "sourceMap": false,
        "paths": {
            "@vue/*": ["packages/*/src"]
        },
        "moduleResolution": "node",
        "newLine": "LF",
      "target": "es2016",    
    },
    "include": [
        "packages/*/src"
    ],
    "exclude": [
        "node_modules"
    ]
}